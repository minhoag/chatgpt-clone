generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  firstname     String
  lastname      String
  role  String
  limit Int
  passwordHash  String
  image         String?
  conversations Conversation[]
}

model Conversation {
  id        String   @id @default(cuid())
  name      String
  messages  Json[]
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
